{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react", "react-dom", "next"],
    "baseUrl": ".",
    "paths": {
      "@lqe/types": ["packages/types/src"],
      "@lqe/utils": ["packages/utils/src"],
      "@lqe/config/*": ["config/lqe/*"]
    }
  }
}
